<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <data>
        <!-- Cron que genera envio de mensaje a usuario del CRM -->
        <record id="ir_cron_crm_mail_vendedor_pendiente" model="ir.cron">
            <field name="name">Correo Automatico a Vendedor - Producto 1</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <!--field name="nextcall">28/06/2020 00:00:00</field-->
            <field name="numbercall">-1</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field eval="True" name="doall" />
            <field name="state">code</field>
            <field name="code">model.notificar_vendedor()</field>
        </record>
    </data>
</odoo>